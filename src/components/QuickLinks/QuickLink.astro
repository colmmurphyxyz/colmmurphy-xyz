---
const { icon, iconAlt, title, url } = Astro.props;
---

<li class="quickLink">
    <a href={url}>
        <img src={icon} alt={iconAlt} loading="eager"/>
        <h3>{title}</h3>
    </a>
</li>

<style>
    .quickLink {
        background-color: var(--light-background-color);
        border-radius: 20px;
        border: 2px solid rgba(0, 0, 0, 0.9);
        transition: all 0.11s ease-in-out;
        width: 250px;
        margin: 0.8em;
    }

    .quickLink:hover {
        transform: translateY(-8px);
    }

    .quickLink > a {
        text-decoration: none;
        width: 100%;
        height: 100%;
        line-height: 100%;
        display: flex;
        flex-direction: row;
        flex-wrap: nowrap;
        justify-content: space-between;
        color: var(--dark-text-color);
    }

    .quickLink img {
        height: 45px;
        width: 45px;
        padding: 8px;
    }

    .quickLink h3 {
        padding-right: 1em;
    }
</style>
