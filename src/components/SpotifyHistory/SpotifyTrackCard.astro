---
import { PlayTime, Track } from "../../api/types";
import { timeAgo } from "./time-formatting";

const track: Track = Astro.props.track;
const playedAt: PlayTime = Astro.props.playedAt;
const coverImage = track.album.images[0];

const coverImageSize = 120;
const cardWidth = "250px";
---

<style define:vars={{ cardWidth }}>
    .spotifyTrackCard {
        position: relative;
        width: var(--cardWidth);
        margin: 0.5em;
        padding-top: 0.9em;
        border-radius: 8px;
        background-color: var(--light-background-color);

        display: flex;
        flex-direction: column;
    }

    .spotifyTrackCard > img {
        margin: 0 auto;
        border-radius: 8px; 
    }

    .spotifyTrackCard > div > h3, .spotifyTrackCard > div > p {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-align: center;
        padding: 0 1ch;
    }

    .spotifyTrackCard > p {
        position: absolute;
        top: -4px;
        right: 6px;
        color: var(--light-gray);
        font-size: 0.8em;
    }
</style>

<div class="spotifyTrackCard">
    <img src={coverImage.url} width={coverImageSize} height={coverImageSize} />
    <div>
        <h3>{track.artists[0].name}</h3>
        <p>{track.name}</p>
    </div>
    <p>{playedAt === "" ? "now" : timeAgo(Date.parse(playedAt))}</p>
</div>